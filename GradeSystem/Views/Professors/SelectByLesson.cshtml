@model IEnumerable<GradeSystem.Models.CourseHasStudent>

@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <link href="~/css/style.min.css" rel="stylesheet">
    <meta charset="UTF-8">


    <style>
        .user-bg .overlay-box {
            background: #6190b7;
            opacity: 0.85;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            text-align: center
        }

        #Selected {
            width: 250px;
        }

        #Selected option {
            width: 250px;
        }
    </style>
</head>
<body>


    <div class="page-wrapper border">

        
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid " style="background-color: #F7F7F7">

            <h3>Προβολή βαθμολογίας ανά εξάμηνο</h3>

            

            <div class="container row p-0 m-0">

                <div class="col-12 border p-3" style="background-color: white">

                    <form action="SelectByLesson" method="post">

                        <h3>Επίλεξε Μάθημα:</h3>

                        <select class="form-select" name="SelectedCourseId" id="SelectedCourseId" onchange="this.form.submit()">
                            <option value="" selected disabled hidden>Επίλεξε εδώ</option>
                            @foreach (var item in ViewBag.lessonsList)
                            {
                                @if (ViewBag.Selected == item.IdCourse)
                                {

                                    <option value="@item.IdCourse" selected> @item.IdCourse @item.CourseTitle</option>

                                }
                                else
                                {
                                    <option value="@item.IdCourse"> @item.IdCourse @item.CourseTitle</option>
                                }


                            }

                        </select>

                    </form>
                    <br />

                    @if (ViewBag.Selected != null)
                    {

                        <table class="table table-striped table-bordered" style="width:100%" id="DT_load">

                            <thead>
                                <tr>
                                    <th>
                                        Τμημα
                                    </th>
                                    <th>
                                        κωδικος φοιτητη
                                    </th>
                                    <th>
                                        Ονομα φοιτητη
                                    </th>
                                    <th>
                                        Επωνυμο Φοιτητη
                                    </th>
                                    <th>
                                        Βαθμος Φοιτητη
                                    </th>


                                </tr>

                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.Department)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GradeCourseStudent)
                                    </td>


                                </tr>
                            }

                        </table>
                    }
                </div>
            </div>
                   

        </div>

    </div>

    <br/>
    <br/>
    <br />
    
</body>

</html>
@section Scripts{
    <script src="~/js/DataTable.js"></script>
}