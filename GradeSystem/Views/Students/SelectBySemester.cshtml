@model IEnumerable<GradeSystem.Models.CourseHasStudent>

@{
    ViewData["Title"] = "Προβολή βαθμολογίας ανά εξάμηνο";
}

<html>
<head>
    <link href="~/css/style.min.css" rel="stylesheet">
    <meta charset="UTF-8">


    <style>
        .user-bg .overlay-box {
            background: #6190b7;
            opacity: 0.85;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            text-align: center
        }

        #Selected {
            width: 250px;
        }

        #Selected option {
            width: 250px;
        }
    </style>
</head>
<body>


    <div class="page-wrapper border">

        
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid " style="background-color: #F7F7F7">

            <h3>Προβολή βαθμολογίας ανά εξάμηνο</h3>

            

            <div class="container row p-0 m-0">

                <div class="col-12 border p-3" style="background-color: white">
                    
                    <form action="SelectBySemester" method="post">

                        <h3>Επίλεξε Εξαμηνο:</h3>

                        <select class="form-select" name="Selected" id="Selected" onchange="this.form.submit()">
                            <option value="" selected disabled hidden>Επίλεξε εδώ</option>
                            @for (int i = 1; i <= ViewBag.max_sem; i++)
                            {
                                @if (ViewBag.Selected == i)
                                {

                                    <option value="@i" selected> Εξαμηνο @i</option>

                                }
                                else
                                {
                                    <option value="@i"> Εξαμηνο @i</option>
                                }


                            }




                        </select>

                    </form>
                    <br />
                    <table class="table table-striped table-bordered" style="width:100%" id="DT_load">

                        <thead>
                            <tr>
                                <th>
                                    Κωδικός Μαθήματος
                                </th>
                                <th>
                                    Τίτλος Μαθήματος
                                </th>
                                <th>
                                    Βαθμός
                                </th>
                                <th>
                                    Εξάμηνο
                                </th>


                            </tr>

                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.IdCourse)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.CourseTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GradeCourseStudent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.CourseSemester)
                                </td>


                            </tr>
                        }

                    </table>

                </div>
            </div>
                   

        </div>

    </div>

    <br/>
    <br/>
    <br />
    
</body>

</html>
@section Scripts{
    <script src="~/js/DataTable.js"></script>
}