@model IEnumerable<GradeSystem.Models.CourseHasStudent>

@{
    ViewData["Title"] = "Index";
}

<h1>Select All</h1>

<div class="container row p-0 m-0">

    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%" id="DT_load">

            <thead>
                <tr>
                    <th>
                        Κωδικός Μαθήματος
                    </th>
                    <th>
                        Τίτλος Μαθήματος
                    </th>
                    <th>
                        Βαθμός
                    </th>
                    <th>
                        Εξάμηνο
                    </th>

           
        </tr>

            </thead>

            @foreach (var item in Model)
            {
                <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.IdCourse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeCourseStudent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseSemester)
                </td>


            </tr>
            }

        </table>
        
    </div>
</div>
@section Scripts{
    <script src="~/js/DataTable.js"></script>
}